# Email Configuration (GoDaddy/Professional Mail)
IMAP_HOST=imap.secureserver.net
IMAP_PORT=993
IMAP_USER=support@flareflow.tv
IMAP_PASSWORD=your_password_here
IMAP_TLS=true
DRAFTS_MAILBOX=Drafts
REPLY_FROM_ADDRESS=support@flareflow.tv
REPLY_FROM_NAME=FlareFlow Support
SAVE_DRAFTS=false

# Processing Configuration
FETCH_INTERVAL_MINUTES=5
MAX_EMAILS_PER_FETCH=50
MARK_AS_READ=false

# Logging Configuration
LOG_LEVEL=info  # minimal | info | debug (use 'minimal' for GitHub Actions)
REDACT_PII=true # Always true in production to protect customer privacy

# LLM Configuration
LLM_PROVIDER=zhipu
ZHIPU_API_KEY=your_zhipu_api_key_here
